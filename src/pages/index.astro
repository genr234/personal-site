---
import Layout from "../layouts/Layout.astro";
import { WindowManager } from "../components/WindowSystem/WindowManager.tsx";
import { TutorialDialogue } from "../components/Tutorial/TutorialDialogue.tsx";
---

<Layout>
    <script>
        import {randomPalette} from "../lib/background.ts";

        document.addEventListener("keydown", (e) => {
            if (e.key === "Shift") {
                randomPalette();
            }
        })
    </script>
    <WindowManager client:load />
    <TutorialDialogue client:only="preact" steps={[
                      {
                          id: "welcome",
                          text: "Hey there! Welcome to my little corner of the internet!",
                      },
                      {
                          id: "header",
                          text: "Up here is the navigation. You can click these to open different sections of the site.",
                          target: "header-nav",
                      },
                      {
                          id: "dock",
                          text: "This is the dock! All kinds of cool apps live here. Definitely check them out.",
                          target: "dock",
                      },
                      {
                          id: "palette",
                          kind: "palette",
                          text: "Change the background to something you like!",
                      },
                      {
                          id: "done",
                          text: "That's it! Have fun exploring. If you like this website send me a message to let me know (or just to say hi!) See ya!",
                      }
    ]}
    />
</Layout>
