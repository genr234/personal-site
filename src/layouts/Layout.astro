---
import Header from "../components/Header.astro";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link id="favicon" rel="icon" type="image/png" href="/favicons/default.png" />
        <link rel="preconnect" href="https://rsms.me/">
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500&family=Playfair+Display:ital,wght@1,500&display=swap" rel="stylesheet">
        <script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/latest.js" is:inline></script>
        <meta name="generator" content={Astro.generator} />
        <script src="../lib/background.ts" />
        <script>
            document.addEventListener("DOMContentLoaded", (e) => {
                const favicon = document.getElementById("favicon")
                let frame = 0;

                setInterval(() => {
                    if (frame >= 10) {
                        frame = 0;
                    } else {
                        frame++;
                    }
                    favicon.href = `/favicons/${frame}.gif`;
                }, 100);
            })
        </script>
        <title>genr234's manor</title>
	</head>
	<body>
    <canvas id="shader"></canvas>
    <Header centerText="" currentPath={Astro.url.pathname} />
    <slot />
	</body>
</html>

<style is:global lang="scss">
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
      ::selection {
        background: rgba(100, 100, 255, 0.3);
        opacity: 0.1;
      }
      .mobile-window-mode {
        padding-bottom: 100px;
      }

      > #shader {
        position: fixed;
        width: 100vw;
        height: 100vh;
      }
	}

    @font-face {
        font-family: Gentle;
        src: url(/fonts/gentle.otf);
    }
    @font-face {
        font-family: Nano;
        src: url(/fonts/nano.ttf);
    }
    @font-face {
        font-family: Cutta;
        src: url(/fonts/cutta-bold.otf);
    }
    :root {
        font-family: Inter, sans-serif;
        font-feature-settings: 'liga' 1, 'calt' 1; /* fix for Chrome */
    }
    @supports (font-variation-settings: normal) {
        :root { font-family: InterVariable, sans-serif; }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }

    /* Window dragging state */
    body.window-dragging {
        user-select: none;
        cursor: grabbing !important;
    }

    body.window-dragging * {
        cursor: grabbing !important;
    }
</style>
