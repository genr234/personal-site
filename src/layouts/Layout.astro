---
import Header from "../components/Header.astro";
import { WindowManager } from "../components/WindowSystem/WindowManager";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://rsms.me/">
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
        <script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
        <meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
    <Header centerText="" currentPath={Astro.url.pathname} />
    <slot />
    <WindowManager client:load />
	</body>
</html>

<style is:global lang="scss">
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #CCCCFF;
	}
    body::selection {
        background-color: #D9D9D9;
        opacity: 0.1;
    }

    body.mobile-window-mode {
        padding-bottom: 100px;
    }

    @font-face {
        font-family: Gentle;
        src: url(/fonts/gentle.otf);
    }
    @font-face {
        font-family: Nano;
        src: url(/fonts/nano.ttf);
    }
    @font-face {
        font-family: Cutta;
        src: url(/fonts/cutta-bold.otf);
    }
    :root {
        font-family: Inter, sans-serif;
        font-feature-settings: 'liga' 1, 'calt' 1; /* fix for Chrome */
    }
    @supports (font-variation-settings: normal) {
        :root { font-family: InterVariable, sans-serif; }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }

    /* Window dragging state */
    body.window-dragging {
        user-select: none;
        cursor: grabbing !important;
    }

    body.window-dragging * {
        cursor: grabbing !important;
    }
</style>
